{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "declaration": true,
    "esModuleInterop": true,
    "inlineSourceMap": false,
    "lib": ["esnext"],
    "listEmittedFiles": false,
    "listFiles": false,
    "moduleResolution": "node",
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": false,
    "pretty": true,
    "resolveJsonModule": true,
    "rootDir": ".",
    "skipLibCheck": true,
    "strict": false,
    "traceResolution": false,
    "types": [],
    "typeRoots": ["typings"],
    "paths": {
      "@global": ["./@global/index.ts"],
      "@scripts/*": ["./scripts/*"]
    }
  },
  "compileOnSave": false,
  "exclude": [
    "node_modules",
    "node_modules",
    "node_modules/**/index.d.ts",
    "node_modules/@types/node/index.d.ts",
    "dist"
  ]
}
